# ===========================================
# TURF WORLD - MEDUSA BACKEND CONFIGURATION
# ===========================================
# Copy to .env and fill in your values

# Database (PostgreSQL)
DATABASE_URL=postgres://postgres:password@localhost:5432/turf_world

# Redis
REDIS_URL=redis://localhost:6379

# Security (CHANGE IN PRODUCTION)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
COOKIE_SECRET=your-super-secret-cookie-key-min-32-chars

# CORS
STORE_CORS=http://localhost:3000
ADMIN_CORS=http://localhost:7001
AUTH_CORS=http://localhost:3000,http://localhost:7001
MEDUSA_BACKEND_URL=http://localhost:9000

# S3 / MinIO
S3_FILE_URL=https://your-bucket.s3.us-west-2.amazonaws.com
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=us-west-2
S3_BUCKET=turf-world-media
# S3_ENDPOINT=http://localhost:9000  # Uncomment for MinIO

# Stripe
STRIPE_API_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret

# Meilisearch
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=your-master-key
